<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_height="wrap_content"
     android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    app:cardCornerRadius="30dp"
    app:cardElevation="20dp"
    android:layout_margin="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginVertical="16dp"
        android:orientation="vertical">
            <TextView
                android:id="@+id/recycler_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/recycler_address"
                android:text="Name: "
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintVertical_bias="0.0"/>
        <TextView
            android:id="@+id/namePlaceHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/recycler_name"
            android:text="PlaceHolder"
            android:textSize="26sp"
            android:textStyle=""/>

        <TextView
            android:id="@+id/recycler_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/recycler_name"
            app:layout_constraintBottom_toTopOf="@id/recycler_address"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Phone: "
            android:textSize="26sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/phonePlaceHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/recycler_name"
            app:layout_constraintBottom_toTopOf="@id/recycler_address"
            app:layout_constraintStart_toEndOf="@id/recycler_name"
            android:text="PlaceHolder"
            android:textSize="26sp"
            android:textStyle=""/>

        <TextView
            android:id="@+id/recycler_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/recycler_phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/recycler_brand"
            android:text="Address: "
            android:textSize="26sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/addressPlaceHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/recycler_phone"
            app:layout_constraintStart_toEndOf="@id/recycler_address"
            app:layout_constraintBottom_toTopOf="@id/recycler_brand"
            android:text="PlaceHolder"
            android:textSize="26sp"
            android:textStyle=""/>

        <TextView
            android:id="@+id/recycler_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/recycler_address"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Brand: "
            android:textSize="26sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/brandPlaceHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/addressPlaceHolder"
            app:layout_constraintStart_toEndOf="@id/recycler_brand"
            android:text="PlaceHolder"
            android:textSize="26sp"
            android:textStyle=""/>

        <TextView
            android:id="@+id/recycler_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/recycler_brand"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/recycler_date"
            android:text="Model: "
            android:textSize="26sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/modelPlaceHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/brandPlaceHolder"
            app:layout_constraintStart_toEndOf="@id/recycler_model"
            app:layout_constraintBottom_toTopOf="@id/datePlaceHolder"
            android:text="PlaceHolder"
            android:textSize="26sp"
            android:textStyle=""/>

        <TextView
            android:id="@+id/recycler_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/recycler_model"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Date: "
            android:textSize="26sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/datePlaceHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/modelPlaceHolder"
            app:layout_constraintStart_toEndOf="@id/recycler_date"
            android:text="PlaceHolder"
            android:textSize="26sp"
            android:textStyle=""/>





    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>